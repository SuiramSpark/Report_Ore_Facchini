rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Allow read/write access to all users (MODALIT√Ä TEST - da restringere in produzione)
    match /{document=**} {
      allow read, write: if true;
    }

    // Allow write access to modificationLogs collection
    match /modificationLogs/{docId} {
      allow create: if true;
    }

    // Allow write access to workerNotifications collection
    match /workerNotifications/{docId} {
      allow create: if true;
    }

    // Timesheets
    match /timesheets/{sheetId} {
      allow read, write: if true;
    }

    // Blacklist
    match /blacklist/{blacklistId} {
      allow read, write: if true;
    }

    // Audit Log
    match /auditLog/{logId} {
      allow read, write: if true;
    }

    // Worker Sessions
    match /workerSessions/{sessionId} {
      allow read, write: if true;
    }

    // Settings (lettura e scrittura libera SOLO PER TEST)
    match /settings/{settingId} {
      allow read, write: if true;
    }

    // üìä Counter per auto-assegnazione numeri fogli
    match /settings/sheetCounter {
      allow read, write: if true;
      allow update: if true; // Permette increment() atomico
    }

    // üîê Settings - ADMIN AUTH (password hash)
    // Lettura: pubblica (necessaria per login)
    // Scrittura: SOLO tramite app (nessun utente esterno pu√≤ modificare)
    match /settings/adminAuth {
      allow read: if true;
      allow write: if true; // Cambia a 'false' in produzione per massima sicurezza
    }

    // üîê Settings - SECURITY QUESTIONS (domande di sicurezza)
    // Lettura: pubblica (necessaria per recovery password)
    // Scrittura: SOLO tramite app (nessun utente esterno pu√≤ modificare)
    match /settings/securityQuestions {
      allow read: if true;
      allow write: if true; // Cambia a 'false' in produzione per massima sicurezza
    }

    // Scheduled Notifications
    match /scheduledNotifications/{notificationId} {
      allow read, write: if true;
    }

    // üë• Users Collection (nuova implementazione)
    // Lettura: tutti possono leggere i profili utenti
    // Scrittura: tutti possono creare/modificare (da restringere in futuro con autenticazione)
    match /users/{userId} {
      allow read: if true;  // Tutti possono vedere i profili
      allow create: if true; // Permette creazione nuovi utenti
      allow update: if true; // Permette aggiornamenti (es. makePermanent)
      allow delete: if true; // Permette eliminazione (solo admin in UI)
    }

    // üè¢ Companies Collection (NUOVO SISTEMA - Multi-Company)
    match /companies/{companyId} {
      allow read: if true;
      allow write: if true; // TODO: Restringere con autenticazione
    }

    // üìç Addresses Collection (NUOVO SISTEMA - Multi-Address)
    match /addresses/{addressId} {
      allow read: if true;
      allow write: if true; // TODO: Restringere con autenticazione
    }

    // üïí Recent Addresses Collection (NUOVO - Auto-saved da fogli)
    match /recentAddresses/{recentId} {
      allow read: if true;
      allow create: if true; // Auto-save quando si salva un foglio
      allow update: if true; // Aggiornamento contatore usedCount
      allow delete: if true; // Cleanup automatico e manuale da Settings
    }

    // üî¢ Counters Collection (NUOVO - Auto-numerazione fogli)
    match /counters/{counterId} {
      allow read: if true;
      allow write: if true; // Permette creazione e aggiornamento counter
    }
  }
}